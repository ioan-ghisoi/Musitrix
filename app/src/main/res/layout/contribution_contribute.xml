<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/scrolling_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/levelwp"/>

    <ImageView
        android:id="@+id/scrolling_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/levelwp"/>

    <LinearLayout
        android:layout_width="340dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/mBrowse"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:alpha="0.9"
            android:textColor="@color/musitrix_white"
            android:background = "@drawable/roundedbutton"
            android:layout_marginBottom="15dp"
            android:text="Browse Songs" />


        <Button
            android:id="@+id/mUpload"
            android:alpha="0.9"
            android:textColor="@color/musitrix_white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background = "@drawable/roundedbutton"
            android:text="Upload Song" />


        <!--<Spinner-->
            <!--android:id="@+id/spinner1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:textColor="@color/musitrix_green"-->
            <!--android:layout_marginBottom="30dp"-->
            <!--android:background="@android:drawable/btn_dropdown"-->
            <!--android:spinnerMode="dropdown" />-->


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            tools:context=".MainActivity" >

            <Button
                android:id="@+id/dropButton"
                android:alpha="0.9"
                android:background = "@drawable/roundedbutton"
                android:textColor="@color/musitrix_white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="Chose Pieces" />

        </RelativeLayout>


        <EditText
            android:id="@+id/user_description"
            android:layout_width="match_parent"
            android:alpha="0.9"
            android:text="Enter text to be displayed after level"
            android:textColor="@color/musitrix_white"
            android:textSize="15dp"
            android:background = "@drawable/roundedbutton"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/mDownload"
            android:textColor="@color/musitrix_white"
            android:background = "@drawable/roundedbutton"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_height="50dp"
            android:text="Submit" />

        <Button
            android:id="@+id/mPreview"
            android:textColor="@color/musitrix_white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:background = "@drawable/roundedbutton"
            android:text="Preview" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="10"
        android:layout_gravity="bottom"
        android:orientation="horizontal">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/back_button"
            android:src="@drawable/back"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="left"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:background="#00000000"
            android:scaleType="fitXY" />

    </LinearLayout>


</FrameLayout>