<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deptheffect"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/solution_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/solver_height"
            android:orientation="horizontal" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/play_full_track_button"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/logo_v2"
                android:layout_gravity="center"
                android:contentDescription="bla" />

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
