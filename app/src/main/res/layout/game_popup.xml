<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    >
    <Button
        android:id="@+id/idButton"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:text="Button"
        />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:orientation="vertical"

        android:layout_alignParentLeft="true">

        <ImageButton
            android:id="@+id/idButtosdfn"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/levelcleared"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="-50dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/level_back"
                android:text="left"
                android:src="@drawable/back"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".20" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/level_next"
                android:text="right"
                android:src="@drawable/forward"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".20" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="-300dp"
            android:text="          Congrats!!! By the way \n this track is played by Ioan Ghisoi. \n           Click to check him out"
            android:textColor="@color/musitrix_black"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_height="50dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/user"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="SCORE:"
            android:textColor="@color/musitrix_black"
            android:layout_gravity="center"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/level_score"
            android:layout_width="wrap_content"
            android:layout_marginTop="-20dp"
            android:text="999999"
            android:textColor="@color/musitrix_black"
            android:layout_gravity="center"
            android:layout_height="50dp" />


        <ImageView
            android:id="@+id/level_stars"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:src="@drawable/star3"
            android:layout_height="50dp" />




    </LinearLayout>
</LinearLayout>