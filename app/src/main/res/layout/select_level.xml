<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/scrolling_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/levelwp"/>

    <ImageView
        android:id="@+id/scrolling_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/levelwp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:background="@color/musitrix_green"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_height="25dp"
                        android:src="@drawable/lifeprog"/>

                    <TextView
                        android:id="@+id/user_lifes"
                        android:layout_marginTop="-22dp"
                        android:layout_marginLeft="12dp"
                        android:textSize="12dp"
                        android:textColor="@color/musitrix_white"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="20dp"
                        android:textAlignment="center"
                        android:text="..."/>

                    <TextView
                        android:id="@+id/lifeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Life"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_height="25dp"
                        android:src="@drawable/timeprog"/>

                    <TextView
                        android:id="@+id/user_time"
                        android:layout_marginTop="-22dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="12dp"
                        android:textColor="@color/musitrix_white"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="20dp"
                        android:textAlignment="center"
                        android:text="..."/>
                    <TextView
                        android:textAlignment="center"
                        android:layout_marginLeft="9dp"
                        android:id="@+id/timeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_height="25dp"
                        android:src="@drawable/replayprog"/>

                    <TextView
                        android:id="@+id/user_replay"
                        android:layout_marginTop="-22dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="12dp"
                        android:textColor="@color/musitrix_white"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="20dp"
                        android:textAlignment="center"
                        android:text="..."/>

                    <TextView
                        android:id="@+id/replayLabel"
                        android:textAlignment="center"
                        android:layout_marginLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Replay"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_height="25dp"
                        android:src="@drawable/coins"/>

                    <TextView
                        android:id="@+id/user_coins"
                        android:layout_marginTop="-20dp"
                        android:layout_marginLeft="6dp"
                        android:textSize="12dp"
                        android:textColor="@color/musitrix_white"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="20dp"
                        android:textAlignment="center"
                        android:text="..."/>

                    <TextView
                        android:id="@+id/coinaLbel"
                        android:textAlignment="center"
                        android:layout_marginLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coin"/>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="80">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/levelsbg"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="100dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/lvl1_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:weightSum="100">


                        <ImageView
                            android:id="@+id/lvl1_image"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="75"
                            android:adjustViewBounds="true"
                            android:background="#00000000"
                            android:cropToPadding="false"
                            android:scaleType="fitXY"
                            android:src="@drawable/lvl1" />

                        <ImageView
                            android:id="@+id/lvl1_stars"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-30dp"
                            android:layout_weight="25"
                            android:src="@drawable/star0" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lvl2_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:weightSum="100">


                        <ImageView
                            android:id="@+id/lvl2_image"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="75"
                            android:adjustViewBounds="true"
                            android:background="#00000000"
                            android:cropToPadding="false"
                            android:scaleType="fitXY"
                            android:src="@drawable/lvl2block" />

                        <ImageView
                            android:id="@+id/lvl2_stars"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-30dp"
                            android:layout_weight="25"
                            android:src="@drawable/star3"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lvl3_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:weightSum="100">


                        <ImageView
                            android:id="@+id/lvl3_image"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="75"
                            android:adjustViewBounds="true"
                            android:background="#00000000"
                            android:cropToPadding="false"
                            android:scaleType="fitXY"
                            android:src="@drawable/lvl3block" />

                        <ImageView
                            android:id="@+id/lvl3_stars"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-30dp"
                            android:layout_weight="25"
                            android:src="@drawable/star3"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/lvl4_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:weightSum="100">


                        <ImageView
                            android:id="@+id/lvl4_image"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="75"
                            android:adjustViewBounds="true"
                            android:background="#00000000"
                            android:cropToPadding="false"
                            android:scaleType="fitXY"
                            android:src="@drawable/lvl4block" />

                        <ImageView
                            android:id="@+id/lvl4_stars"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-30dp"
                            android:layout_weight="25"
                            android:src="@drawable/star3"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lvl5_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:weightSum="100">


                        <ImageView
                            android:id="@+id/lvl5_image"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="75"
                            android:adjustViewBounds="true"
                            android:background="#00000000"
                            android:cropToPadding="false"
                            android:scaleType="fitXY"
                            android:src="@drawable/lvl5block" />

                        <ImageView
                            android:id="@+id/lvl5_stars"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-30dp"
                            android:layout_weight="25"
                            android:src="@drawable/star3"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lvl6_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:weightSum="100">


                        <ImageView
                            android:id="@+id/lvl6_image"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="75"
                            android:adjustViewBounds="true"
                            android:background="#00000000"
                            android:cropToPadding="false"
                            android:scaleType="fitXY"
                            android:src="@drawable/lvl6block" />

                        <ImageView
                            android:id="@+id/lvl6_stars"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-30dp"
                            android:layout_weight="25"
                            android:src="@drawable/star3"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/lvl7_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:weightSum="100">


                        <ImageView
                            android:id="@+id/lvl7_image"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="75"
                            android:adjustViewBounds="true"
                            android:background="#00000000"
                            android:cropToPadding="false"
                            android:scaleType="fitXY"
                            android:src="@drawable/lvl7block" />

                        <ImageView
                            android:id="@+id/lvl7_stars"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-30dp"
                            android:layout_weight="25"
                            android:src="@drawable/star3"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lvl8_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:weightSum="100">


                        <ImageView
                            android:id="@+id/lvl8_image"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="75"
                            android:adjustViewBounds="true"
                            android:background="#00000000"
                            android:cropToPadding="false"
                            android:scaleType="fitXY"
                            android:src="@drawable/lvl8block" />

                        <ImageView
                            android:id="@+id/lvl8_stars"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-30dp"
                            android:layout_weight="25"
                            android:src="@drawable/star3"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lvl9_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:weightSum="100">


                        <ImageView
                            android:id="@+id/lvl9_image"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="75"
                            android:adjustViewBounds="true"
                            android:background="#00000000"
                            android:cropToPadding="false"
                            android:scaleType="fitXY"
                            android:src="@drawable/lvl9block" />

                        <ImageView
                            android:id="@+id/lvl9_stars"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-30dp"
                            android:layout_weight="25"
                            android:src="@drawable/star3"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/backButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/back"/>

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/user_picture"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:text="User"
                        android:textColor="@color/musitrix_black"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
