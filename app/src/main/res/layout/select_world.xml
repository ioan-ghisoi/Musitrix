<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/scrolling_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/worldwp"/>

    <ImageView
        android:id="@+id/scrolling_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/worldwp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:background="@color/musitrix_green"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1.2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="25dp"
                        android:src="@drawable/lifeprog"/>

                    <TextView
                        android:id="@+id/user_lifes"
                        android:layout_marginTop="-20dp"
                        android:layout_marginLeft="12dp"
                        android:textSize="12dp"
                        android:textColor="@color/musitrix_white"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="20dp"
                        android:textAlignment="center"
                        android:text="..."/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2">

                    <ImageView
                        android:layout_width="105dp"
                        android:layout_gravity="center"
                        android:layout_height="25dp"
                        android:src="@drawable/coins"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:background="#00000000"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/user_coins"
                        android:layout_marginTop="-19dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="12dp"
                        android:textColor="@color/musitrix_white"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="20dp"
                        android:textAlignment="center"
                        android:text="..."/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6">

                    <ImageView
                        android:id="@+id/user_picture"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/musiblack"/>

                    <TextView
                        android:id="@+id/user_name"
                        android:gravity="center"
                        android:text="PLAYER"
                        android:layout_gravity="center"
                        android:textColor="@color/musitrix_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="73">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="300dp"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:background="#00000000"
                android:scaleType="fitXY"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/world_progress"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="0%"
                android:textAlignment="center"
                android:textColor="#28b78d"
                android:textSize="20dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/back"/>

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/shop"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/store"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
