<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    >
    <Button
        android:id="@+id/idButton"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:text="Button"
        />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:orientation="vertical"

        android:layout_alignParentLeft="true">

        <ImageButton
            android:id="@+id/idButtosdfn"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/pannel"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="-50dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/level_next"
                android:text="right"
                android:src="@drawable/forward"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".10" />

        </LinearLayout>


        <TextView
            android:layout_width="250dp"
            android:layout_marginTop="-300dp"
            android:text="Now notice that around that button there are smaller other buttons, each representing a short part of the full track you just heard."
            android:textColor="@color/musitrix_black"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:layout_height="90dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/musiblue"
                android:layout_gravity="center"
                android:layout_height="50dp" />
            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/musiblack"
                android:layout_gravity="center"
                android:layout_height="50dp" />
            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/musipink"
                android:layout_gravity="center"
                android:layout_height="50dp" />

        </LinearLayout>



    </LinearLayout>
</LinearLayout>